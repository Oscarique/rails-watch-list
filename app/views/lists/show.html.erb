<h2><%= @list.name %></h2>
<p><strong>Movies</strong></p>
<div class="wrap-cards">
  <% @list.movies.each do |movie| %>
    <div class="card">
      <img class="card-img-top" src=<%= movie.poster_url%> alt="Card image cap">
        <h5 class="item"><%= movie.title%></h5>
        <p class="item"><%= movie.overview%></p>
        <a href="#" class="button4"">Go to the film</a>
      </div>
    <% end %>
</div>
<div class="buttons-together">
<%= link_to "Add film to the list", new_list_bookmark_path(@list), class: "button4" %>
<%= link_to "Delete", list_path(@list), class: "button4", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
<%= link_to "Back", lists_path, class: "button4"%>
</div>
