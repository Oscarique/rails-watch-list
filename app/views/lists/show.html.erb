<h2><%= @list.name %></h2>
<p><strong>Movies</strong></p>
<div class="container">
  <div class="row">
    <% @list.movies.each do |movie| %>
      <div class="col-sm">
        <div class="card w-60 h-75" style="width: 18rem;">
          <img class="card-img-top" src="https://edicionesnemo.es/wp-content/uploads/2019/06/film-1155439_1280.jpg" alt="Card image cap">
          <div class="card-body">
            <h5 class="card-title"><%= movie.title%></h5>
            <p class="card-text"><%= movie.overview%></p>
            <a href="#" class="btn btn-primary">Go somewhere</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<%= link_to "Add film to the list", new_list_bookmark_path(@list), class: "btn btn-primary" %>
<%= link_to "Delete", list_path(@list), class: "btn btn-primary", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
<%= link_to "Back", lists_path, class: "btn btn-primary"%>
